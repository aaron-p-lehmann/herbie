{
  "name": "Herbie",
  "description": "Herbie is the 'mind reading' robot for browser automation and testing.",
  "version": "1.1",
  "manifest_version": 2,
  "icons": { "16": "herbie16.png",
             "48": "herbie48.png",
            "128": "herbie128.png" },
  "permissions": ["alarms", "notifications", "tabs", "*://*/*", "file:///*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": [
    "dist/*",
    "herbie/*",
    "*.png"
  ],
    "browser_action": {
    "default_icon" : "herbie48.png",
    "default_title": "Start Herbie"
  }
}
